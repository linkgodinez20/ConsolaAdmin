    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ol class="breadcrumb">
    <li>Inicio</li>
    <li><b>Contacto (Tipo)</b></li>
    <li class="active">Lista</li>
</ol>
<hr />

<table class="table table-bordered table-condensed table-hover">
