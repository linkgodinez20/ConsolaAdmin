@model Security.Core.Model.Contactos

@Scripts.Render("~/bundles/Miscelaneous")

<div class="modal-header label-info">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hitden="true">&times;</span></button>
    <h2 class="modal-title">Detalle</h2>
    <h4 class="Fuente_blanca">Contacto</h4>
</div>

<div class="modal-body">
    <table class="table table-striped table-bordered table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Contacto)
            </th>

            <td>
                @Html.DisplayFor(model => model.Contacto)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Notas)
            </th>

            <td>
                @Html.DisplayFor(model => model.Notas)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Estatus)
            </th>

            <td>
                @Html.DisplayFor(model => model.Estatus)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id_ContactoMedio)
            </th>

            <td>
                @Html.DisplayFor(model => model.Contacto_medio.Nombre)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id_ContactoTipo)
            </th>

            <td>
                @Html.DisplayFor(model => model.Contacto_tipo.Nombre)
            </td>
        </tr>
    </table>
</div>
<div class="modal-footer">
    <p>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a class="btn btn-info glyphicon glyphicon-chevron-left" data-container="body" data-toggle="popover" data-placement="right" data-content="Volver" data-dismiss="modal"></a>
            </div>
        </div>
        <hr />
    </p>
</div>