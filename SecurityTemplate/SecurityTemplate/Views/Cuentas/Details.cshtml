@model Security.Core.Model.Cuentas

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<script>
    $(document).ready(function () {
        $('button').popover({ trigger: "hover" });
        $('a').popover({ trigger: 'hover' });
    });
</script>

<div class="modal-header label-info">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

    <h2 class="modal-title">Detalles</h2>

    <h4 class="Fuente_blanca">Cuentas</h4>
</div>

<div class="modal-body">
    <table class="table table-striped table-bordered table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaCreacion)
            </th>

            <td>
                @Html.DisplayFor(model => model.FechaCreacion)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaModificacion)
            </th>

            <td>
                @Html.DisplayFor(model => model.FechaModificacion)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IntentosCnn)
            </th>

            <td>
                @Html.DisplayFor(model => model.IntentosCnn)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InicioBloqueo)
            </th>

            <td>
                @Html.DisplayFor(model => model.InicioBloqueo)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Estatus)
            </th>

            <td>
                @Html.DisplayFor(model => model.Estatus)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegistroCompleto)
            </th>

            <td>
                @Html.DisplayFor(model => model.RegistroCompleto)
            </td>
        </tr>
        <tr>
            <th>
                Baja
            </th>

            <td>
                @Html.DisplayFor(model => model.Baja.Nombre)
            </td>
        </tr>
        <tr>
            <th>
                Login
            </th>

            <td>
                @Html.DisplayFor(model => model.LogIn.Usuario)
            </td>
        </tr>
        <tr>
            <th>
                Perfil
            </th>

            <td>
                @Html.DisplayFor(model => model.Perfiles.Nombre)
            </td>
        </tr>
        <tr>
            <th>
                Sistema
            </th>

            <td>
                @Html.DisplayFor(model => model.Sistemas.Nombre)
            </td>
        </tr>
    </table>
</div>

<div class="modal-footer">
    @{
        var ControllerName = ViewContext.RouteData.Values["Controller"];
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @*<a class="btn btn-warning glyphicon glyphicon-pencil" data-container="body" data-toggle="popover" data-placement="left"
                data-content="Editar" href="~/@ControllerName/Edit/@Model.Id_Accion"></a>*@
            <a class="btn btn-info glyphicon glyphicon-chevron-left" data-container="body" data-toggle="popover" data-placement="right"
               data-content="Volver" href="~/@ControllerName"></a>
        </div>
    </div>
</div>
