@model IEnumerable<Security.Core.Model.Directorios>

@{
    ViewBag.Title = "Listado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li>Inicio</li>
    <li><b>Directorios</b></li>
    <li class="active">Lista</li>
</ol>
<hr />
<table class="table table-bordered table-condensed table-hover">
    <tr>
        <th class="alert-info">
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th class="alert-info">
            @Html.DisplayNameFor(model => model.Estatus)
        </th>
        <th class="alert-info">
            @Html.DisplayNameFor(model => model.Directorio_tipo.Nombre)
        </th>
        <th class="alert-success">
            <span class="glyphicon glyphicon-cog"> Acciones</span>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Directorio_tipo.Nombre)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_Directorio }, new { @class = "ButtonSettings Edit" }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id_Directorio }, new { @class = "ButtonSettings Details" }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Directorio }, new { @class = "ButtonSettings Delete" })
            </td>
        </tr>
    }

</table>
<table>
    <tr>
        <td>
            @Html.ActionLink(" ", "Create", "Directorios", null, new { @class = "btn btn-success glyphicon glyphicon-plus" })
        </td>
    </tr>
</table>