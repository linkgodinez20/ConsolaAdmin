@model Security.Core.Model.Domicilios

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-2.1.3.js"></script>

<script type="text/javascript">
    $(document).ready(function () {

        $("#Id_Pais").on('change', function (e) {
            var idp = $(this).val();
            alert(idp);
            e.preventDefault();

            $("#Id_Entidad").empty();
            $("#Id_Municipio").empty();

            var options = [[]];

            $.getJSON("/api/Entidades/?IdPais=" + idp, function (result) {
                for (var i = 0; i < result.length; i++) {
                    options.push('<option value="',
                      result[i].Id_Entidad, '">',
                      result[i].Nombre, '</option>');
                }
                $("#Id_Entidad").html(options.join(''));
            });

            return false;
        })
    });

    $(document).ready(function () {
        $("#Id_Entidad").on('change', function (e) {
            var ide = $(this).val();
            alert(ide);
            e.preventDefault();
            $("#Id_Municipio").empty();

            var opciones = [[]];

            $.getJSON("/api/Municipios/?IdEntidad=" + ide, function (resultado) {
                for (var j = 0; j < resultado.length; j++) {
                    opciones.push('<option value="',
                      resultado[j].Id_Municipio, '">',
                      resultado[j].Nombre, '</option>');
                }
                $("#Id_Municipio").html(opciones.join(''));
            });
            return false;
        })
    });

    $(document).ready(function () {
        $("#Id_Municipio").on('change', function (e) {
            var SelectId = $ (this).val ();
            alert(SelectId);

            e.preventDefault();

            return false;
        })
    });

</script>
