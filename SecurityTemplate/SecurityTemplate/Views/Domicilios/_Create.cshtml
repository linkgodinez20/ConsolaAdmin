<script type="text/javascript">
    $(document).ready(function () {
        alert('entró');
        var options = [[]];

        $.getJSON("/api/Paises", function (result) {
            for (var i = 0; i < result.length; i++) {
                options.push('<option value="',
                  result[i].Id_Pais, '">',
                  result[i].Nombre, '</option>');
            }
            $("#Id_Pais").html(options.join(''));
        });


        $("#Id_Pais").on('change', function (e) {
            var idp = $(this).val();

            e.preventDefault();

            $("#Id_Entidad").empty();
            $("#Id_Municipio").empty();

            var options = [[]];

            $.getJSON("/api/Entidades/GetEntidades/?IdPais=" + idp, function (result) {
                for (var i = 0; i < result.length; i++) {
                    options.push('<option value="',
                      result[i].Id_Entidad, '">',
                      result[i].Nombre, '</option>');
                }
                $("#Id_Entidad").html(options.join(''));
            });

            return false;
        })
    });
</script>
