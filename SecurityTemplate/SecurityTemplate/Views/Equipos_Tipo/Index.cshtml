        </div>
    </div>
}

<br /><br /><br />
<div class="table-responsive">
    <table class="table table-bordered table-condensed table-striped table-hover Box">
        <tr>
            <th class="alert-info">
                @*@Html.DisplayNameFor(model => model.Nombre)*@
                @Html.ActionLink("Tipo de Equipo", "Index", new { sortOrder = ViewBag.TipoEquipo, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th class="alert-success">
                <span class="glyphicon glyphicon-cog"></span> <b>Acciones</b> 
