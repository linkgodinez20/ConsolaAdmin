@model IEnumerable<Security.Core.Model.Genero>

@{
    ViewBag.Title = "Listado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado</h2>

<p>
    @Html.ActionLink("Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_Genero }       , new { @class = "ButtonSettings Edit" }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.Id_Genero }, new { @class = "ButtonSettings Details" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id_Genero }   , new { @class = "ButtonSettings Delete" })
        </td>
    </tr>
}

</table>
