@model PagedList.IPagedList<Security.Core.Model.LogIn>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 align="center">LogIns</h2>

@using (Html.BeginForm("Index", "LogIn", FormMethod.Get))
{
    <div class="col-lg-3 col-md-4 col-sm-5 col-xs-5">
        <div class="input-group">
            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
            <span class="input-group-btn">
                <input type="submit" value="Buscar" placeholder="Valor de búsqueda" class="btn btn-default" />
            </span>
        </div>
    </div>
}

<br /><br /><br />

<p>
    @Html.ActionLink("Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Usuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Senha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsoSalt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Personas.APaterno)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Senha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UsoSalt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Personas.APaterno)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_Login }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id_Login }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id_Login })
        </td>
    </tr>
}

</table>
