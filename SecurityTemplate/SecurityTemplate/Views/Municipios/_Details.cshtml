@model Security.Core.Model.Municipios

@Scripts.Render("~/bundles/Miscelaneous")

<div class="modal-header label-info">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hitden="true">&times;</span></button>
    <h2 class="modal-title">Detalle</h2>
    <h4 class="Fuente_blanca">Municipio</h4>
</div>

    @Html.HiddenFor(model => model.Id_Pais)
    @Html.HiddenFor(model => model.Id_Entidad)
    @Html.HiddenFor(model => model.Id_Municipio)

<div class="modal-body">
    <h4 class="Titulo"><b>@Html.DisplayFor(model => model.Entidades.Nombre, new { htmlAttributes = new { @class = "form-control" } })</b></h4>
    <table class="table table-striped table-bordered table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>

            <td>
                @Html.DisplayFor(model => model.Nombre)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Abreviatura)
            </th>

            <td>
                @Html.DisplayFor(model => model.Abreviatura)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Entidades.Nombre)
            </th>

            <td>
                @Html.DisplayFor(model => model.Entidades.Nombre)
            </td>
        </tr>
    </table>
</div>
<div class="modal-footer">
    <p>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a class="btn btn-info glyphicon glyphicon-chevron-left" data-container="body" data-toggle="popover" data-placement="right" data-content="Volver" data-dismiss="modal"></a>
            </div>
        </div>
        <hr />
    </p>
</div>