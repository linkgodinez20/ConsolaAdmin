@model Security.Core.Model.Perfiles

@{
    ViewBag.Title = "Perfiles / Detalles";
    Layout = "";
}
@Scripts.Render("~/bundles/Miscelaneous")
<div class="modal-header label-info">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hitden="true">&times;</span></button>

    <h2 class="modal-title">Detalle</h2>

    <h4 class="Fuente_blanca">Perfiles</h4>
</div>

<div class="modal-body">
    <table class="table table-striped table-bordered table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>

            <td>
                @Html.DisplayFor(model => model.Nombre)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Funcion)
            </th>

            <td>
                @Html.DisplayFor(model => model.Funcion)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>

            <td>
                @Html.DisplayFor(model => model.Tipo)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nivel)
            </th>

            <td>
                @Html.DisplayFor(model => model.Nivel)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id_Sistema)
            </th>

            <td>
                @Html.DisplayFor(model => model.Sistemas.Nombre)
            </td>
        </tr>
    </table>
</div>
<div class="modal-footer">
    @{
        var ControllerName = ViewContext.RouteData.Values["Controller"];
    }
    <p>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a class="btn btn-warning glyphicon glyphicon-pencil" data-container="body" data-toggle="popover" data-placement="left"
                   data-content="Editar" href="~/@ControllerName/Edit/@Model.Id_Perfil"></a>
                <a class="btn btn-info glyphicon glyphicon-chevron-left" data-container="body" data-toggle="popover" data-placement="right"
                   data-content="Volver" href="~/@ControllerName"></a>
            </div>
        </div>
        <hr />
    </p>
</div>