@model IEnumerable<Security.Core.Model.Perfiles>

@{
    ViewBag.Title = "Perfiles / Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="Titulo" align="center">Perfiles</h2>
<ol class="breadcrumb">
    <li><span class="glyphicon glyphicon-home"></span> @Html.ActionLink("Inicio", "Index", "Home")</li>
    <li><b>Perfiles</b></li>
    <li class="active">Lista</li>
</ol>
<hr />
<div class="table-responsive">
    <table class="table table-bordered table-condensed table-hover Box">
        <tr>
            <th class="alert-info">
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th class="alert-info">
                @Html.DisplayNameFor(model => model.Funcion)
            </th>
            <th class="alert-info">
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th class="alert-info">
                @Html.DisplayNameFor(model => model.Nivel)
            </th>
            <th class="alert-info">
                @Html.DisplayNameFor(model => model.Sistemas.Nombre)
            </th>
            <th class="alert-success">
                <span class="glyphicon glyphicon-cog"></span><b> Acciones</b>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Funcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nivel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sistemas.Nombre)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.Id_Perfil }, new { @class = "btn-xs btn-warning glyphicon glyphicon-pencil", data_toggle = "modal", data_target = "#EditModal" }) |
                    @Html.ActionLink(" ", "Details", new { id = item.Id_Perfil }, new { @class = "btn-xs btn-info glyphicon glyphicon-th-list", data_toggle = "modal", data_target = "#DetailsModal" }) |
                    @Html.ActionLink(" ", "Delete", new { id = item.Id_Perfil }, new { @class = "btn-xs btn-danger glyphicon glyphicon-remove", data_toggle = "modal", data_target = "#DelModal" })
                </td>
            </tr>
        }

    </table>
    </div>
    @{
        var ControllerName = ViewContext.RouteData.Values["controller"];
    }
    <table>
        <tr>
            <td>
                <a class="btn btn-success glyphicon glyphicon-plus" data-toggle="modal" data-target="#CreateModal" id="Agregar" href="~/@ControllerName/Create"></a>
            </td>
        </tr>
    </table>

    <!-- Modal -->
    <div class="modal fade" id="DelModal" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

            </div>
        </div>
    </div>
    <!-- Edit Modal -->
    <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

            </div>
        </div>
    </div>
    <!-- Detalles Modal -->
    <div class="modal fade" id="DetailsModal" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

            </div>
        </div>
    </div>
    <!-- Create Modal -->
    <div class="modal fade" id="CreateModal" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

            </div>
        </div>
    </div>
