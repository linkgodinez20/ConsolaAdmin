@model PagedList.IPagedList<Security.Core.Model.Permisos_Cuentas_x_Actividades>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Permisos Cuentas x Actividades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 align="center">Permisos Cuentas x Actividades</h2>

@using (Html.BeginForm("Index", "Permisos_Cuentas_x_Actividades", FormMethod.Get))
{
    <div class="col-xs-12 col-sm-5 col-md-4 col-lg-3">
        <div class="input-group">
            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
            <span class="input-group-btn">
                <input type="submit" value="Buscar" placeholder="Valor de búsqueda" class="btn btn-default" />
            </span>
        </div>
    </div>
}

<br /><br /><br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Actividades.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cuentas.Id_Cuenta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Permisos.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Actividades.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cuentas.Id_Cuenta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Permisos.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { /* id=item.PrimaryKey */ }, new { @class = "btn-xs btn-warning glyphicon glyphicon-pencil" }) |
            @Html.ActionLink("Detalles", "Details", new { /* id=item.PrimaryKey */ }, new { @class = "btn-xs btn-info glyphicon glyphicon-th-list" }) |
            @Html.ActionLink("Eliminar", "Delete", new { /* id=item.PrimaryKey */ }, new { @class = "btn-xs btn-danger glyphicon glyphicon-remove" })
        </td>
    </tr>
}

</table>
@Html.PagedListPager(Model, page => Url.Action("Index",
new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
<table class="btn-group">
    <tr>
        <td>
            <div class="input-group">
                <p>                    
                    @Html.ActionLink(" ", "Create", "Permisos_Cuentas_x_Actividades", null, new { @class = "btn btn-success glyphicon glyphicon-plus" })
                </p>
            </div>
        </td>
    </tr>
</table>
