@model PagedList.IPagedList<Security.Core.Model.Preguntas>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Preguntas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="Titulo" align="center">Preguntas</h2>

@using (Html.BeginForm("Index", "Preguntas", FormMethod.Get))
{
    <div class="col-xs-12 col-sm-5 col-md-4 col-lg-3">
        <div class="input-group">
            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
            <span class="input-group-btn">
                <button type="submit" value="Buscar" class="btn btn-info">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
}

<br /><br /><br />
<div class="table-responsive">
    <table class="table table-bordered table-condensed table-striped table-hover Box">
        <tr>
            <th class="alert-info">
                @Html.ActionLink("Pregunta", "Index", new { sortOrder = ViewBag.Directorio, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th class="alert-success">
                <span class="glyphicon glyphicon-cog"></span> <b>Acciones</b> 
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Pregunta)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.Id_Pregunta }, new { @class = "btn-xs btn-warning glyphicon glyphicon-pencil", data_toggle = "modal", data_target = "#EditModal" }) |
                    @Html.ActionLink(" ", "Details", new { id = item.Id_Pregunta }, new { @class = "btn-xs btn-info glyphicon glyphicon-th-list", data_toggle = "modal", data_target = "#DetailsModal" }) |
                    @Html.ActionLink(" ", "Delete", new { id = item.Id_Pregunta }, new { @class = "btn-xs btn-danger glyphicon glyphicon-remove", data_toggle = "modal", data_target = "#DelModal" })

                </td>
            </tr>
        }

    </table>
</div>
    <!-- Delete Modal -->
    <div class="modal fade" id="DelModal" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content"> </div>
        </div>
    </div>
    <!-- Edit Modal -->
    <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">  </div>
        </div>
    </div>
    <!-- Create Modal -->
    <div class="modal fade" id="CreateModal" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">  </div>
        </div>
    </div>
    <!-- Details Modal -->
    <div class="modal fade" id="DetailsModal" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">  </div>
        </div>
    </div>
    @Html.PagedListPager(Model, page => Url.Action("Index",
new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    <table class="btn-group">
        <tr>
            <td>
                <div class="input-group">
                    <p>
                        <a class="btn btn-success glyphicon glyphicon-plus" data-toggle="modal" data-target="#CreateModal" href="/Preguntas/Create"></a>
                    </p>
                </div>
            </td>
        </tr>
    </table>
