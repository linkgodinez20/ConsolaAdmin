@model IEnumerable<Security.Core.Model.Preguntas>

@{
    ViewBag.Title = "Listado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado</h2>

<p>
    @Html.ActionLink("Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Pregunta)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Pregunta)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_Pregunta }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id_Pregunta }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id_Pregunta })
        </td>
    </tr>
}

</table>
