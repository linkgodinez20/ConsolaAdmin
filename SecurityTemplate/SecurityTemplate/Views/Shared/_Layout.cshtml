    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/modernizr")*@
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <link href="~/Content/New/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/New/plugins/font-awesome-4.3.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/New/plugins/ionicons-2.0.1/css/ionicons.min.css" rel="stylesheet" />
    <link href="~/Content/New/dist/css/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/Content/New/dist/css/skins/_all-skins.min.css" rel="stylesheet" />
    <link href="~/Content/New/plugins/iCheck/flat/blue.css" rel="stylesheet" />
    <link href="~/Content/New/plugins/morris/morris.css" rel="stylesheet" />
    <link href="~/Content/New/plugins/jvectormap/jquery-jvectormap-1.2.2.css" rel="stylesheet" />
    <link href="~/Content/New/plugins/datepicker/datepicker3.css" rel="stylesheet" />
    <link href="~/Content/New/plugins/daterangepicker/daterangepicker-bs3.css" rel="stylesheet" />
