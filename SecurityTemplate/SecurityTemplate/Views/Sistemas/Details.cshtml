@model Security.Core.Model.Sistemas

@{
    ViewBag.Title = "Sistemas / Detalles";
    Layout = "";
}
@Scripts.Render("~/bundles/Miscelaneous")
<div class="modal-header label-info">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hitden="true">&times;</span></button>

    <h2 class="modal-title">Detalle</h2>

    <h4 class="Fuente_blanca">Sistema</h4>
</div>

<div class="modal-body">
    <table class="table table-striped table-bordered table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>

            <td>
                @Html.DisplayFor(model => model.Nombre)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Siglas)
            </th>

            <td>
                @Html.DisplayFor(model => model.Siglas)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>

            <td>
                @Html.DisplayFor(model => model.Descripcion)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Estatus)
            </th>

            <td>
                @Html.DisplayFor(model => model.Estatus)
            </td>
        </tr>
    </table>
</div>
<div class="modal-footer">
    <p>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @{
                    var referencia = "/Sistemas/Edit/" + Model.Id_Sistema;
                }

                <a class="btn btn-warning glyphicon glyphicon-pencil" data-container="body" data-toggle="popover" data-placement="left" data-content="Editar" href=@referencia></a>

                <a class="btn btn-info glyphicon glyphicon-chevron-left" data-container="body" data-toggle="popover" data-placement="right" data-content="Volver" href="/Sistemas"></a>

            </div>
        </div>
    </p>
    </div>

