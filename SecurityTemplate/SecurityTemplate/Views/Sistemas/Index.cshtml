@model IEnumerable<Security.Core.Model.Sistemas>

@{
    ViewBag.Title = "Sistemas / Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/Miscelaneous")

<ol class="breadcrumb">
    <li><span class="glyphicon glyphicon-home"></span> @Html.ActionLink("Inicio", "Index", "Home")</li>
    <li><b>Sistemas</b></li>
    <li class="active">Lista</li>
</ol>
<h2 class="Titulo" align="center">Sistemas</h2>
<hr />
<div class="table-responsive">
    <table class="table table-bordered table-condensed table-hover Box">
        <tr>
            <th class="alert-info">
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th class="alert-info">
                @Html.DisplayNameFor(model => model.Siglas)
            </th>
            <th class="alert-info">
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th class="alert-info">
                @Html.DisplayNameFor(model => model.Estatus)
            </th>
            <th class="alert-success">
                <span class="glyphicon glyphicon-cog"></span><b> Acciones</b>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Siglas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estatus)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.Id_Sistema }, new { @class = "btn-xs btn-warning glyphicon glyphicon-pencil", data_modal = "" }) |
                    @Html.ActionLink(" ", "Details", new { id = item.Id_Sistema }, new { @class = "btn-xs btn-info glyphicon glyphicon-th-list", data_modal = "" }) |
                    @Html.ActionLink(" ", "Delete", new { id = item.Id_Sistema }, new { @class = "btn-xs btn-danger glyphicon glyphicon-remove", data_modal = "" })
                </td>
            </tr>
        }
    </table>
</div>
<table>
    <tr>
        <td>
            @Html.ActionLink(" ", "Create", "Contactos", htmlAttributes: new { @class = "btn btn-success glyphicon glyphicon-plus", data_modal = "" })
        </td>
    </tr>
</table>
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $.ajaxSetup({ cache: false });

        $("a[data-modal]").on("click", function (e) {
            // hide dropdown if any (this is used wehen invoking modal from link in bootstrap dropdown )
            //$(e.target).closest('.btn-group').children('.dropdown-toggle').dropdown('toggle');

            $('#myModalContent').load(this.href, function () {
                $('#myModal').modal({
                    backdrop: 'static',
                    keyboard: true,

                }, 'show');
                bindForm(this);
            });
            return false;
        });
    });

    function bindForm(dialog) {
        $('form', dialog).submit(function () {

            $.ajax({
                type: this.method,
                url: this.action,
                data: $(this).serialize(),
                success: function (result) {
                    if (result.success) {
                        $('#myModal').modal('hide');
                        window.location.href = result.url;
                    } else {
                        $('#myModalContent').html(result);
                        bindForm(dialog);
                    }
                }
            });

            return false;
        });
    }
</script>