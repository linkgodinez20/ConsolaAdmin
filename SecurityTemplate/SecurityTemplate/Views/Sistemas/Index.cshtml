@model IEnumerable<Security.Core.Model.Sistemas>

@{
    ViewBag.Title = "Listado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li>Inicio</li>
    <li><b>Personas</b></li>
    <li class="active">Lista</li>
</ol>
<hr />

<table class="table table-bordered table-condensed table-hover">
    <tr>
        <th class="alert-info">
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th class="alert-info">
            @Html.DisplayNameFor(model => model.Siglas)
        </th>
        <th class="alert-info">
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th class="alert-info">
            @Html.DisplayNameFor(model => model.Estatus)
        </th>
        <th class="alert-success">
            <span class="glyphicon glyphicon-cog"> Acciones</span>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Siglas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estatus)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.Id_Sistema }, new { @class = "btn-xs btn-warning glyphicon glyphicon-pencil" }) |
                @Html.ActionLink(" ", "Details", new { id = item.Id_Sistema }, new { @class = "btn-xs btn-info glyphicon glyphicon-th-list" }) |
                @Html.ActionLink(" ", "Delete", new { id = item.Id_Sistema }, new { @class = "btn-xs btn-danger glyphicon glyphicon-remove" })
            </td>
        </tr>
    }
</table>
<table>
    <tr>
        <td>
            <a class="btn btn-success glyphicon glyphicon-plus" data-container="body" data-toggle="popover" data-placement="right" data-content="Agregar" href="/Sistemas/Create"></a>
        </td>
    </tr>
</table>
<script src="~/Scripts/jquery-2.1.3.js"></script>
<script type="text/javascript">
   $(document).ready(function () {

       $('button').popover({ trigger: "hover" });

       $('a').popover({ trigger: 'hover' });


   });
</script>