﻿@model PagedList.IPagedList<Security.Core.Model.Contacto>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li>Inicio</li>
    <li><b>Personas</b></li>
    <li class="active">Lista</li>
</ol>
<hr />
@using (Html.BeginForm("Index", "Contacto", FormMethod.Get))
{
    <div class="col-lg-3 col-md-4 col-sm-5 col-xs-5">

        <div class="input-group">
            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
            <span class="input-group-btn">
                <input type="submit" value="Buscar" placeholder="Valor de búsqueda" class="btn btn-default" />
            </span>
        </div>
    </div>
    <br />
}
<br />
<br />
<table class="table table-bordered table-condensed table-hover">
    <tr>
        <th class="alert-info">
            @Html.ActionLink("Medio", "Index", new { sortOrder = ViewBag.SortByContactoMedio, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th class="alert-info">
            @Html.ActionLink("Tipo", "Index", new { sortOrder = ViewBag.SortByContactoTipo, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th class="alert-info">
            @Html.ActionLink("Contacto", "Index", new { sortOrder = ViewBag.SortByContacto, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th class="alert-info">
            Notas
        </th>
        <th class="alert-info">
            Estatus
        </th>

        <th class="alert-success">
            <span class="glyphicon glyphicon-cog"> Acciones</span>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Contacto_medio.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contacto_tipo.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contacto1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estatus)
            </td>

            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_Contacto }, new { @class = "ButtonSettings Edit" }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id_Contacto }, new { @class = "ButtonSettings Details" }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.Id_Contacto }, new { @class = "ButtonSettings Delete" })
            </td>
        </tr>
    }

</table>
@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

<table>
    <tr>
        <td>
            @Html.ActionLink(" ", "Create", "Contactos", null, new { @class = "btn btn-success glyphicon glyphicon-plus" })
        </td>
    </tr>
</table>