﻿@model PagedList.IPagedList<Security.Core.Model.Municipios>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-2.1.3.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#Entidades_ddl").on('change', function (e) {

            var EntidadSeleccionadas = $("#Entidades_ddl").val();

            alert(EntidadSeleccionadas);

            e.preventDefault();

            var param = {
                sortOrder: '',
                currentFilter: '',
                searchString: '',
                page: 1,
                EntidadSeleccionada: $("#Entidades_ddl").val(),
            };

            var url_Action = '@Url.Action("Index", "Municipios")';
            alert(url_Action);

            $.ajax({
                type: 'POST',
                url: '@Url.Action("Index", "Domicilios")',
                dataType: 'json',
                traditional: true,
                contentType: "application/json; charset=utf-8",
                data: param,
                success: function () {
                    $.post('@Url.Action("Index", "Municipios")');
                    alert('success');
                },
                error: function (ex) {
                    alert('Se encontró un problema.' + ex);
                }
            });
            return false;
        })
    });
</script>

<ol class="breadcrumb">
    <li>Inicio</li>
    <li><b>Municipios</b></li>
    <li class="active">Lista</li>
</ol>
<hr />
@using (Html.BeginForm("Index", "Municipios", FormMethod.Get))
{
    <div class="col-lg-3 col-md-4 col-sm-5 col-xs-5">
        <div class="input-group">
            @Html.DropDownList("Entidades_ddl", null, "Elija una opción", new { @class = "form-control" })
            <span class="input-group-btn">
                <button type="submit" value="create" class="btn btn-info">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-5 col-xs-5">

            <div class="input-group">
                @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
                <span class="input-group-btn">
                    <input type="submit" value="Buscar" placeholder="Valor de búsqueda" class="btn btn-default" />
                </span>
            </div>
        </div>
        <br />
        }
        <br />
        <br />
        <table class="table table-bordered table-condensed table-hover">
            <tr>
                <th class="alert-info">
                    @Html.ActionLink("Entidad", "Index", new { sortOrder = ViewBag.SortByEntidad, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th class="alert-info">
                    <b>@Html.ActionLink("Municipio", "Index", new { sortOrder = ViewBag.SortByMunicipio, currentFilter = ViewBag.CurrentFilter })</b>
                </th>
                <th class="alert-info">
                    Abreviatura
                </th>
                <th class="alert-success">
                    <span class="glyphicon glyphicon-cog"> Acciones</span>
                </th>
            </tr>

            @foreach (var item in Model)
    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Entidades.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Abreviatura)
                    </td>
                    <td>
                        @Html.ActionLink(" ", "Edit", new { id = item.Id_Pais, id2 = item.Id_Entidad, id3 = item.Id_Municipio }, new { @class = "ButtonSettings Edit" }) |
                        @Html.ActionLink(" ", "Details", new { id = item.Id_Pais, id2 = item.Id_Entidad, id3 = item.Id_Municipio }, new { @class = "ButtonSettings Details" }) |
                        @Html.ActionLink(" ", "Delete", new { id = item.Id_Pais, id2 = item.Id_Entidad, id3 = item.Id_Municipio }, new { @class = "ButtonSettings Delete" })
                    </td>
                </tr>
    }

        </table>
        @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
        <table>
            <tr>
                <td>
                    @Html.ActionLink(" ", "Create", "Municipios", null, new { @class = "btn btn-success glyphicon glyphicon-plus" })
                </td>
            </tr>
        </table>
