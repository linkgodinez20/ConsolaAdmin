@model PagedList.IPagedList<Security.Core.Model.Preguntas_x_Login>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Preguntas por login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="Titulo" align="center">Preguntas por login</h2>

@using (Html.BeginForm("Index", "PreguntasXLogin", FormMethod.Get))
{
    <div class="col-lg-3 col-md-4 col-sm-5 col-xs-5">
        <div class="input-group">
            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
            <span class="input-group-btn">
                <button type="submit" value="create" class="btn btn-info">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
}

<br /><br /><br />

<table class="table table-bordered table-condensed table-striped table-hover">
    <tr>
        <th class="alert-info">
            @*@Html.DisplayNameFor(model => model.Respuesta)*@
            @Html.ActionLink("Respuesta", "Index", new { sortOrder = ViewBag.Respuesta, currentFilter = ViewBag.CurrentFilter })            
        </th>
        <th class="alert-info">
            @*@Html.DisplayNameFor(model => model.LogIn.Usuario)*@
            @Html.ActionLink("Usuario", "Index", new { sortOrder = ViewBag.Usuario, currentFilter = ViewBag.CurrentFilter })            
        </th>
        <th class="alert-info">
            @*@Html.DisplayNameFor(model => model.Preguntas.Pregunta)*@
            @Html.ActionLink("Pregunta", "Index", new { sortOrder = ViewBag.Pregunta, currentFilter = ViewBag.CurrentFilter })            
        </th>
        <th class="alert-success">
            <span class="glyphicon glyphicon-cog"> <b>Acciones</b> </span>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Respuesta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LogIn.Usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preguntas.Pregunta)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { /* id=item.PrimaryKey */ }, new { @class = "btn-xs btn-warning glyphicon glyphicon-pencil" }) |
                @Html.ActionLink(" ", "Details", new { /* id=item.PrimaryKey */ }, new { @class = "btn-xs btn-info glyphicon glyphicon-th-list" }) |
                @Html.ActionLink(" ", "Delete", new { /* id=item.PrimaryKey */ }, new { @class = "btn-xs btn-danger glyphicon glyphicon-remove" })
            </td>
        </tr>
    }

</table>
@Html.PagedListPager(Model, page => Url.Action("Index",
new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
<table class="btn-group">
    <tr>
        <td>
            <div class="input-group">
                <p>
                    @Html.ActionLink(" ", "Create", "PreguntasXLogin", null, new { @class = "btn btn-success glyphicon glyphicon-plus" })
                </p>
            </div>
        </td>
    </tr>
</table>