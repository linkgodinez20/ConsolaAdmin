@model Security.Core.Model.Domicilios

@{
    ViewBag.Title = "Domicilio/Nuevo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-2.1.3.js"></script>

<script type="text/javascript">
    $(document).ready(function () {

        var options = [[]];

        $.getJSON("/api/Paises", function (result) {
            for (var i = 0; i < result.length; i++) {
                options.push('<option value="',
                  result[i].Id_Pais, '">',
                  result[i].Nombre, '</option>');
            }
            $("#Id_Pais").html(options.join(''));
        });


        $("#Id_Pais").on('change', function (e) {
            var idp = $(this).val();
            
            e.preventDefault();

            $("#Id_Entidad").empty();
            $("#Id_Municipio").empty();
            
            var options = [[]];

            $.getJSON("/api/Entidades/?IdPais=" + idp, function (result) {
                for (var i = 0; i < result.length; i++) {
                    options.push('<option value="',
                      result[i].Id_Entidad, '">',
                      result[i].Nombre, '</option>');
                }
                $("#Id_Entidad").html(options.join(''));
            });

            return false;
        })
    });
</script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#Id_Entidad").on('change', function (e) {
            var ide = $(this).val();

            e.preventDefault();
            $("#Id_Municipio").empty();

            var options = [[]];

            $.getJSON("/api/Municipios/?IdEntidad=" + ide, function (result) {
                for (var i = 0; i < result.length; i++) {
                    options.push('<option value="',
                      result[i].Id_Municipio, '">',
                      result[i].Nombre, '</option>');
                }
                $("#Id_Municipio").html(options.join(''));
            });

            return false;
        })
    });
</script>
 
