﻿@model PagedList.IPagedList<Security.Core.Model.Menu>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li>Inicio</li>
    <li><b>Men&uacute;</b></li>
    <li class="active">Lista</li>
</ol>

@using (Html.BeginForm("Index", "Menus", FormMethod.Get))
{
    <div class="col-xs-12 col-sm-5 col-md-4 col-lg-3">
        <div class="input-group">
            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
            <div class="input-group-btn">
                <button name="btnSearch" id="btnSearch" type="submit" value="create" class="btn btn-info">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
                <button name="btnFilter" id="btnFilter" type="submit" value="index" class="btn btn-default" data-container="body" data-toggle="popover" data-placement="right" data-content="Quitar filtro">
                    <i class="glyphicon glyphicon-filter"></i>
                </button>
            </div>
        </div>
    </div>
    <br />
}
<br />
<br />
<table class="table table-bordered table-condensed table-hover">
    <tr>
        <th class="alert-info">
            @Html.ActionLink("Nombre", "Index", new { sortOrder = ViewBag.SortByNombre, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th class="alert-info">
            @*@Html.ActionLink(@Html.DisplayNameFor(model => model.Parent).ToString(), "Index", new { sortOrder = ViewBag.SortByParent, currentFilter = ViewBag.CurrentFilter })*@
            @Html.ActionLink("Padre", "Index", new { sortOrder = ViewBag.SortByParent, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th class="alert-info">
            Tooltip
        </th>
        <th class="alert-info">
            @Html.ActionLink("Orden", "Index", new { sortOrder = ViewBag.SortByOrder, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th class="alert-info">
            Habilitado
        </th>
        <th class="alert-info">            
            @Html.ActionLink("Categoría", "Index", new { sortOrder = ViewBag.SortByCategoria, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th class="alert-info">
            Página
        </th>
        <th class="alert-info">
            Sistema
        </th>
        <th class="alert-success">
            <span class="glyphicon glyphicon-cog"> Acciones</span>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parent)                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tooltip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Orden)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Habilitado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Menu_categoria.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paginas.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sistemas.Nombre)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.Id_Menu }, new { @class = "btn-xs btn-warning glyphicon glyphicon-pencil" }) |
                @Html.ActionLink(" ", "Details", new { id = item.Id_Menu }, new { @class = "btn-xs btn-info glyphicon glyphicon-th-list" }) |
                @Html.ActionLink(" ", "Delete", new { id = item.Id_Menu }, new { @class = "btn-xs btn-danger glyphicon glyphicon-remove" })
            </td>
        </tr>
    }

</table>
@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
<table>
    <tr>
        <td>
            @Html.ActionLink(" ", "Create", "Menus", null, new { @class = "btn btn-success glyphicon glyphicon-plus" })
        </td>
    </tr>
</table>
<script src="~/Scripts/jquery-2.1.3.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $("#btnFilter").popover({ trigger: "hover" });

        $('a').popover({ trigger: 'hover' });

        $('#btnSearch').click(function () {
            $('#btnFilter').removeClass('disabled');
        });

        $('#btnFilter').click(function () {
            $('#SearchString').val('');

            $('#btnFilter').addClass('disabled');
        });
    });
</script>