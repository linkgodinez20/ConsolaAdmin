﻿@model PagedList.IPagedList<Security.Core.Model.Municipios>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li>Inicio</li>
    <li><b>Municipios</b></li>
    <li class="active">Lista</li>
</ol>
<hr />
@using (Html.BeginForm("Index", "Municipios", FormMethod.Get))
{
    <div class="col-xs-12 col-sm-5 col-md-4 col-lg-3">
        <div class="input-group">
            @Html.DropDownList("Entidades_ddl", (SelectList)ViewBag.Entidades_ddl, "Elija una opción", new { @class = "form-control" })

            <span class="input-group-btn">
                <button type="submit" value="create" class="btn btn-info" data-container="body" data-toggle="popover" data-placement="top" data-content="Buscar">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
    <div class="col-xs-12 col-sm-5 col-md-4 col-lg-3">
        <div class="input-group">
            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
            <div class="input-group-btn">
                <button name="btnSearch" id="btnSearch" type="submit" value="create" class="btn btn-info" data-container="body" data-toggle="popover" data-placement="top" data-content="Buscar">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
                <button name="btnFilter" id="btnFilter" type="submit" value="index" class="btn btn-default" data-container="body" data-toggle="popover" data-placement="right" data-content="Quitar filtro">
                    <i class="glyphicon glyphicon-filter"></i>
                </button>
            </div>
        </div>
    </div>
                <br />
}
        <br />
        <br />
        <table class="table table-bordered table-condensed table-hover">
            <tr>
                <th class="alert-info">
                    @Html.ActionLink("Entidad", "Index", new { sortOrder = ViewBag.SortByEntidad, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th class="alert-info">
                    <b>@Html.ActionLink("Municipio", "Index", new { sortOrder = ViewBag.SortByMunicipio, currentFilter = ViewBag.CurrentFilter })</b>
                </th>
                <th class="alert-info">
                    Abreviatura
                </th>
                <th class="alert-success">
                    <span class="glyphicon glyphicon-cog"> Acciones</span>
                </th>
            </tr>

            @foreach (var item in Model)
    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Entidades.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Abreviatura)
                    </td>
                    <td>
                        @Html.ActionLink(" ", "Edit", new { id = item.Id_Pais, id2 = item.Id_Entidad, id3 = item.Id_Municipio }, new { @class = "btn-xs btn-warning glyphicon glyphicon-pencil" }) |
                        @Html.ActionLink(" ", "Details", new { id = item.Id_Pais, id2 = item.Id_Entidad, id3 = item.Id_Municipio }, new { @class = "btn-xs btn-info glyphicon glyphicon-th-list" }) |
                        @Html.ActionLink(" ", "Delete", new { id = item.Id_Pais, id2 = item.Id_Entidad, id3 = item.Id_Municipio }, new { @class = "btn-xs btn-danger glyphicon glyphicon-remove" })
                    </td>
                </tr>
    }

        </table>
        @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    P&aacute;gina <b>@(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)</b> de <b>@Model.PageCount</b>
        <table>
            <tr>
                <td>
                    @*@Html.ActionLink(" ", "Create", "Municipios", null, new { @class = "btn btn-success glyphicon glyphicon-plus" })*@
                    <a class="btn btn-success glyphicon glyphicon-plus" data-container="body" data-toggle="popover" data-placement="right" data-content="Agregar" href="/Municipios/Create"> </a>

                </td>
            </tr>
        </table>

<script src="~/Scripts/jquery-2.1.3.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $('button').popover({ trigger: "hover" });

        $('a').popover({ trigger: 'hover' });

        $('#btnSearch').click(function () {
            $('#btnFilter').removeClass('disabled');
        });

        $('#btnFilter').click(function () {
            $('#SearchString').val('');

            $('#btnFilter').addClass('disabled');
        });

    });
</script>