﻿@model PagedList.IPagedList<Security.Core.Model.Sesiones>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li>Inicio</li>
    <li><b>Sesiones</b></li>
    <li class="active">Lista</li>
</ol>
<hr />
@using (Html.BeginForm("Index", "Sesiones", FormMethod.Get))
{
    <div class="col-xs-12 col-sm-5 col-md-4 col-lg-3">
        <div class="input-group">
            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
            <div class="input-group-btn">
                <button name="btnSearch" id="btnSearch" type="submit" value="create" class="btn btn-info">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
                <button name="btnFilter" id="btnFilter" type="submit" value="index" class="btn btn-default" data-container="body" data-toggle="popover" data-placement="right" data-content="Quitar filtro">
                    <i class="glyphicon glyphicon-filter"></i>
                </button>
            </div>
        </div>
    </div>
    <br />
}
<br />
<br />
<table class="table table-bordered table-condensed table-hover">
    <tr>
        <th class="alert-info">
            Fecha (Inicio)            
        </th>
        <th class="alert-info">
            @*@Html.ActionLink("En Línea", "Index", new { sortOrder = ViewBag.SortByOnline, currentFilter = ViewBag.CurrentFilter })*@
            En línea
        </th>
        <th class="alert-info">
            Estatus (Cierre)
        </th>
        <th class="alert-info">
            Último movimiento
        </th>
        <th class="alert-info">
            Estatus
            @*@Html.ActionLink("Estatus", "Index", new { sortOrder = ViewBag.SortByEstatus, currentFilter = ViewBag.CurrentFilter })*@
        </th>
        <th class="alert-info">
            @Html.ActionLink("Cuenta", "Index", new { sortOrder = ViewBag.SortByCuenta, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th class="alert-info">
            Sistema
        </th>
        <th class="alert-success">
            <span class="glyphicon glyphicon-cog"> Acciones</span>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaHoraInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OnLine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CierreSesion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UltimoMovimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cuentas.LogIn.Usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sistemas.Nombre)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.Id_Sesion }, new { @class = "btn-xs btn-warning glyphicon glyphicon-pencil" }) |
                @Html.ActionLink(" ", "Details", new { id = item.Id_Sesion }, new { @class = "btn-xs btn-info glyphicon glyphicon-th-list" }) |
                @Html.ActionLink(" ", "Delete", new { id = item.Id_Sesion }, new { @class = "btn-xs btn-danger glyphicon glyphicon-remove" })
            </td>
        </tr>
    }

</table>
<script src="~/Scripts/jquery-2.1.3.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $("#btnFilter").popover({ trigger: "hover" });

        $('a').popover({ trigger: 'hover' });

        $('#btnSearch').click(function () {
            $('#btnFilter').removeClass('disabled');
        });

        $('#btnFilter').click(function () {
            $('#SearchString').val('');

            $('#btnFilter').addClass('disabled');
        });
    });
</script>